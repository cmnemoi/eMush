{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es2020", "dom"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "baseUrl": ".."
  },
  "include": [
    "./config/**/*.ts",
    "./src/**/*.ts",
    "./migration/**/*.ts"
  ],
  "exclude": [
    "tests",
    "node_modules/*",
    "dist"
  ]
}